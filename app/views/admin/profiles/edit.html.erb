<div class="view-profile edit-profile py-5">
  <div class="container">
    <%= form_for(:profile, url: admin_profile_path(current_user), method: :patch) do |f| %>
      <% @profile.errors.full_messages.each do |msg| %>
        <ul>
          <li class="text-danger"><%= msg %></li>
        </ul>
      <% end %>
      <div class="row">
        <div class="col-md-12">
          <div class="card p-3 border-0 mb-4">
            <div class="row">
              <div class="col-md-4 text-center">
                <div class="img-holder update-img border p-1 mb-3">
                  <%= image_tag 'dummy.jpg', class: 'img-fluid' %>
                  <div class="img-uploader">
                    <%= f.file_field :images, multiple: true %>
                    <button type="button" class="btn btn-danger">Image Upload</button>
                  </div>
                  <div class="upload-preview">
                    
                  </div>
                </div>
              </div>
              <div class="col-md-8">
                <div class="mb-3 info-holder">
                  <h6 class="text-danger mb-3"><%= @profile.first_name %> <%= @profile.last_name %></h6>
                  <div class="form-row form-group">
                    <div class="col-6">
                      <%= f.label :first_name %>
                      <%= f.text_field :first_name, placeholder: 'First Name', class: "form-control" %>
                    </div>
                    <div class="col-6">
                      <%= f.label :last_name %>
                      <%= f.text_field :last_name, placeholder: 'Last Name', class: "form-control" %>
                    </div>
                  </div>
                  <div class="form-row form-group">
                    <div class="col-6">
                      <%= f.label :username %>
                      <%= f.text_field :username, placeholder: 'Username', class: "form-control" %>
                    </div>
                    <div class="col-6">
                      <%= f.label :phone_number %>
                      <%= f.text_field :phone_number, placeholder: 'Phone', class: "form-control" %>
                    </div>
                  </div>
                  <div class="form-group">
                      <%= f.label :password %>
                    <%= f.text_field :password, placeholder: 'Password', class: "form-control" %>
                  </div>
                </div>
                <div class="clearfix multi-images">
                  <% if @profile.images.attached? %>
                    <ul class="list-unstyled">
                      <% @profile.images.each do |image| %>
                        <li><%= image_tag image, class: 'img-fluid' %></li>
                      <% end %>
                    </ul>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="text-center col-12 mt-3">
          <button type="submit" class="btn btn-danger btn-lg"><i class="fa fa-heart"></i> Save</button>
        </div>
      </div>
    <% end %>
  </div>
</div>
