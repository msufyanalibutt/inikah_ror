<h2>Contact Requests</h2>
<div class="table-responsive">
  <table class="table table-striped table-sm">
    <thead>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Email</th>
        <th>Message</th>
      </tr>
    </thead>
    <tbody>
      <% @contacts.each_with_index do |contact, index| %>
        <tr>
          <td><%= (index + 1) %></td>
          <td><%= contact.name %></td>
          <td><%= contact.email %></td>
          <td><%= contact.message %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
