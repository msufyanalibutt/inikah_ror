<h2>Users</h2>
<div class="table-responsive">
  <table class="table table-striped table-sm">
    <thead>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Gender</th>
        <th>Username</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each_with_index do |user, index| %>
        <tr>
          <td><%= (index + 1) %></td>
          <td><%= user.full_name %></td>
          <td><%= user.gender %></td>
          <td><%= user.username %></td>
          <td>
            <%= link_to admin_user_path(user), class: 'mr-2', title: 'Show', 'data-toggle' => 'tooltip', 'data-placement' => 'right' do %>
              <i class="fa fa-eye"></i>
            <% end %>

            <%= link_to edit_admin_user_path(user), class: 'mr-2', title: 'edit user', 'data-toggle' => 'tooltip', 'data-placement' => 'right' do %>
              <i class="fa fa-pencil"></i>
            <% end %>

            <%= link_to edit_password_admin_user_path(user), class: 'mr-2', title: 'change password', 'data-toggle' => 'tooltip', 'data-placement' => 'right' do %>
              <i class="fa fa-key"></i>
            <% end %>

            <%= link_to admin_user_path(user), data: { confirm: "Are you sure?" }, method: :delete, title: 'delete', 'data-toggle' => 'tooltip', 'data-placement' => 'right' do %>
              <i class="fa fa-trash"></i>
            <% end %>

            <% if user.active? %>
              <%= link_to block_admin_user_path(user, flag: :block), class: 'mr-2', title: 'block', 'data-toggle' => 'tooltip', 'data-placement' => 'right' do %>
                <i class="fa fa-minus-circle"></i>
              <% end %>
            <% else %>
              <%= link_to block_admin_user_path(user, flag: :active), class: 'mr-2', title: 'active', 'data-toggle' => 'tooltip', 'data-placement' => 'right' do %>
                <i class="fa fa-play"></i>
              <% end %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
