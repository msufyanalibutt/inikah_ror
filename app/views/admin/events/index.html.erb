<h2>Events</h2>
<%= link_to 'Create Event', new_admin_event_path, class: 'pull-right btn btn-sm btn-outline-secondary' %>
<div class="table-responsive">
  <table class="table table-striped table-sm">
    <thead>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Location</th>
        <th>Description</th>
        <th>Start Date</th>
        <th>End Date</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @events.each_with_index do |event, index| %>
        <tr>
          <td><%= (index + 1) %></td>
          <td><%= event.name %></td>
          <td><%= event.location %></td>
          <td><%= event.description %></td>
          <td><%= event.start_date.to_date %></td>
          <td><%= event.end_date.to_date %></td>
          <td><%= link_to 'Edit', edit_admin_event_path(event) %>
          <%= link_to 'Show', admin_event_path(event), class: 'ml-2' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
