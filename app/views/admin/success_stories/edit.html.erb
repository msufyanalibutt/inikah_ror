<h1>Edit Success Story </h1>
<div class=" edit-profile py-5">
  <div class="container">
    <%= form_for [:admin, @success_story], data: { validate: 'parsley' } do |f| %>
      <div class="row">
        <div class="col-md-12">
          <label>Please add a suitable title</label>
          <%= f.text_field :name, class: 'form-control mb-3', placeholder: 'Shahin & Obonti story', required: true %>
        </div>
        <div class="col-md-6">
          <label>Select a cover photo</label>
          <%= f.file_field :image, class: 'form-control mb-3' %>
        </div>
        <div class="clearfix multi-images" style="width: 12%;">
          <strong>Previous image</strong>
          <% if @success_story.image.attached? %>
            <%= image_tag @success_story.image, class: 'img-fluid' %>
          <% end %>
        </div>
      </div>
      <div class="row">
        <div class="col">
          <label>Please add a little description about the Journey</label>
          <%= f.text_area :description, class: 'form-control mb-3', placeholder: "I just don't believe Inikah.com finding to help me to searching my bride. but now it is true.", required: true %>
        </div>
      </div>
      <%= f.submit 'Save', class: 'btn btn-danger' %>
    <% end %>
  </div>
</div>