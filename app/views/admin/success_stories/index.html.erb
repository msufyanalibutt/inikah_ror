<h2>Pending Success Stories</h2>
<div class="table-responsive">
  <table class="table table-striped table-sm">
    <thead>
      <tr>
        <th>ID</th>
        <th>Requestor</th>
        <th>Title</th>
        <th>Message</th>
        <th>Image</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @success_stories.each_with_index do |story, index| %>
        <tr>
          <td><%= (index + 1) %></td>
          <td><%= story.user.username %></td>
          <td><%= story.name %></td>
          <td><%= story.description %></td>
          <td style="width: 60%;"><%= image_tag story.image, class: 'img-fluid-table' %></td>
          <td>   
            <% if story.approved.nil? %>
              <%= link_to 'Approve', approve_admin_success_story_path(story), class: 'mr-2' %>
            <% else %>
              Approved
            <% end %>       
            <%= link_to edit_admin_success_story_path(story), class: 'mr-2', title: 'edit', 'data-toggle' => 'tooltip', 'data-placement' => 'right' do %>
              <i class="fa fa-pencil"></i>
            <% end %>
            <%= link_to admin_success_story_path(story), method: :delete, class: 'mr-2', title: 'delete', 'data-toggle' => 'tooltip', 'data-placement' => 'right' do %>
              <i class="fa fa-trash"></i>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
