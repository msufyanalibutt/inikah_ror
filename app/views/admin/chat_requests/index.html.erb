<h2>Pending Chat Requests</h2>
<div class="table-responsive">
  <table class="table table-striped table-sm">
    <thead>
      <tr>
        <th>ID</th>
        <th>Requestor</th>
        <th>Request Sent To</th>
        <th>Message</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @chat_requests.unapproved.each_with_index do |user, index| %>
        <tr>
          <td><%= (index + 1) %></td>
          <td><%= user.requester.username %></td>
          <td><%= user.user.username %></td>
          <td>Please approve the request to chat user</td>
          <td>          
            <%= link_to 'Approve', approve_admin_chat_request_path(user), class: 'mr-2' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
