<div class="card">
  <div class="card-header msg_head">
    <div class="d-flex bd-highlight">
      <div class="img_cont">
        <img src="https://static.turbosquid.com/Preview/001292/481/WV/_D.jpg" class="rounded-circle user_img">
      </div>
      <div class="user_info">
        <span>Chat with <%= member&.username %></span>
        <div id="conv_mesg_counts">
          <%= render 'conv_mesg_counts', count: conversation&.messages&.count %>
        </div>
      </div>
      <div class="video_cam">
        <!-- <span><i class="fa fa-video"></i></span> -->
        <!-- <span><i class="fa fa-phone"></i></span> -->
      </div>
    </div>
  </div>
  <div class="card-body msg_card_body" id="conversation_<%= conversation.id %>">
    <div id="new_message_div">
      <%= render 'messages', conversation: conversation, member: member %>
    </div>
  </div>
  <div class="card-footer">
    <%= form_for :conversation, url: conversations_path, remote: true do |f|%>
      <div class="input-group">
        <div class="input-group-append">
          <span class="input-group-text attach_btn"></span>
        </div>
        <div class="form-control p-0 border-0">
          <%= hidden_field_tag :sender, user.id %>
          <%= hidden_field_tag :receiver, member&.id  %>
          <%= text_field_tag :note, nil, placeholder: "Type here", class: "form-control border-0" %>
        </div>
        <div class="input-group-append">
          <button type="submit" class="btn btn-danger">Send</button>
        </div>
      </div>
      <!-- <textarea name="" class="form-control type_msg" placeholder="Type your message..."></textarea>
      <div class="input-group-append">
        <span class="input-group-text send_btn"><i class="fa fa-location-arrow"></i></span>
      </div> -->
    <% end %>
  </div>
</div>    